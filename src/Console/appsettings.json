{
  "Auditing": {
    "ShouldAuditOnSuccessfulEvent": true,
    "ShouldDetailAuditOnSuccessfulEvent": false
  },
  "ffmpeg-path": "C:\\Apps\\ffmpeg\\bin\\ffmpeg.exe",
  "ffprobe-path": "C:\\Apps\\ffmpeg\\bin\\ffprobe.exe",

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs\\logs.json" }
      }
    ],
    "Properties": {
      "Application": "MediaTools.Console"
    }
  },

  "thumbnail": {
    "thumbnail-path": "C:\\Temp\\TempThumbnailPath"
  },
  "file-downloader": {
    "save-path": "C:\\Workspace\\media-tools-space"
  },
  "thumbnailsheet": {
    "thumbnail-path-temp": "C:\\Workspace\\media-tools-space\\thumbnails",
    "sheet-path": "C:\\Workspace\\media-tools-space\\thumbnails-sheet"
  }
}