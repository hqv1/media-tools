{
  "Auditing": {
    "ShouldAuditOnSuccessfulEvent": true,
    "ShouldDetailAuditOnSuccessfulEvent": false
  },

  "FileDownloaderService": {
    "SavePath": "C:\\Workspace\\media-tools-space",
    "FfmpegPath": "C:\\Apps\\ffmpeg\\bin\\ffmpeg.exe"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs\\logs.json" }
      }
    ],
    "Properties": {
      "Application": "MediaTools.Console"
    }
  },

  "ThumbnailCreationNotAccurateService": {
    "ThumbnailPath": "C:\\Workspace\\media-tools-space\\thumbnails",
    "FfmpegPath": "C:\\Apps\\ffmpeg\\bin\\ffmpeg.exe"
  },

  "ThumbnailSheetCreationService": {
    "TempThumbnailPath": "C:\\Workspace\\media-tools-space\\thumbnails",
    "ThumbnailSheetPath": "C:\\Workspace\\media-tools-space\\thumbnails-sheet",
    "FfmpegPath": "C:\\Apps\\ffmpeg\\bin\\ffmpeg.exe"
  },

  "VideoFileInfoExtractionService": {
    "FfprobePath": "C:\\Apps\\ffmpeg\\bin\\ffprobe.exe"
  }
}